<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
              "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
              "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>

    <package
        name="login"
        namespace="/"
        extends="struts-default">
        <action
            name="login"
            class="javabrains.action.LoginAction">
            <result name="success-code">/searchForm.jsp</result>
            <result name="failure-code">/login.jsp</result>
        </action>
    </package>

    <package
        name="default"
        namespace="/tutorials"
        extends="struts-default">
        <action
            name="getTutorial"
            class="javabrains.action.TutorialAction">
            <result name="success-code">/success.jsp</result>
            <result name="failure-code">/error.jsp</result>
        </action>
    </package>

</struts>